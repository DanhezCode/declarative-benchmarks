{
  "name": "@danhezcode/declarative-benchmarks",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "bench": "dist/bin/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "bench": "node dist/bin/index.js",
    "dev": "node --watch esbuild.config.js",
    "build": "node esbuild.config.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "node --test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@eslint/js": "9.39.2",
    "@types/bun": "latest",
    "@types/node": "25.0.3",
    "esbuild": "0.27.2",
    "eslint": "9.39.2",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-react": "7.37.5",
    "globals": "17.0.0",
    "husky": "9.1.7",
    "prettier": "3.7.4",
    "typescript-eslint": "8.51.0"
  },
  "peerDependencies": {
    "typescript": "5"
  },
  "dependencies": {
    "simple-statistics": "7.8.8"
  }
}
